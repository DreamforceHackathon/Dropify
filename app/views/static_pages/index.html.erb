<% if user_signed_in? %>
  <div class='row'>
    <div class='col-sm-1'>
      <h2>Dropify</h2>
    </div>
    <div class='col-sm-1 col-sm-offset-10'>
      <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
    </div>
  </div>
  <div>
    <%= button_to "new message", new_message_path, id: 'drop_message_button', :method => :get %>
    <%= render :partial => 'messages/new_message', locals: {message: Message.new} %>
  </div>
  <div id="map-canvas">
  </div>
<% else %>
  <%= link_to 'Sign up', new_user_registration_path %>
  <%= link_to 'Log in', new_user_session_path %>
<% end %>
