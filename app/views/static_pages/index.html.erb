<% if user_signed_in? %>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div id='title_div'>
    <img id='nav_bar_logo' src='images/black.jpg'>
    <h2 id='title'>
        Dropify
    </h2>
    <h2 id="log_out_link" class='navbar-right-align'><%= link_to 'Log out', destroy_user_session_path, method: :delete %></h2>
  </div>
</nav>

  <%= render :partial => 'messages/new_message', locals: {message: Message.new} %>
  <%= render :partial => 'messages/new_picture', locals: {picture: Picture.new} %>

<div>
  <%= render :partial => 'adverts/new', locals: {message: Message.new} %>
</div>
<div id="messageArea" style="display:none"></div>
<div id="map-canvas">
</div>

<%= render partial: 'footer' %>
<% else %>
<div class="landing-page">

  <div class="inner-landing">

    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <h1>Dropify</h1>
          <h3>Please sign up or log in</h3>
          <hr class="intro-divider">
          <ul class="list-inline">
            <li>
             <%= button_to 'Sign up', new_user_registration_path, method: :get, :class => 'btn btn-default btn-lg btn-spacing' %>
            </li>
            <li>
            <%= button_to 'Log in', new_user_session_path, method: :get, :class => 'btn btn-default btn-lg btn-spacing' %>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
  <!-- /.container -->
</div>


<% end %>
