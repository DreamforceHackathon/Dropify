<%= form_for message, html: { id: "new_advert" } do |f| %>
  <%= f.hidden_field :latitude, id: "latitude" %>
  <%= f.hidden_field :longitude, id: "longitude" %>
  <%= f.text_field :title, :id => 'create_advert_title', placeholder: "Title" %>
  <%= f.text_field :url, :id => 'create_advert_url', placeholder: "Website URL" %>
  <%= f.text_field :content, :id => 'create_advert_content', placeholder: "Message" %>
  <%= f.submit "drop advert", :id => 'create_advert_submit', :class => 'btn btn-default'%>
  <%= f.submit "cancel", :id => 'create_advert_cancel', :class => 'btn btn-default' %>
<% end %>